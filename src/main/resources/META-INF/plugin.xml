<idea-plugin>
    <id>top.imyzt.plugin.rest-gen</id>
    <name>rest-gen</name>
    <vendor email="imyzt01@gmail.com" url="http://www.imyzt.top">imyzt</vendor>

    <description>
        根据规则自动生成Spring MVC 控制器方法, 减少重复性劳动
    </description>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="top.imyzt.plugin" class="top.imyzt.plugin.RestGenerator" text="RestGenerator" description="根据规则自动生成Rest接口方法">
            <add-to-group group-id="CodeMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift meta I"/>
        </action>
    </actions>
</idea-plugin>